@model Movies.Data.Movie

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/css/movie-list.css" rel="stylesheet" />
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<!--[if lte IE 8]><script src="wwwroot/js/ie/html5shiv.js"></script><![endif]-->
	<link rel="stylesheet" href="~/css/main.css" />
	<link rel="stylesheet" href="~/fonts/fontawesome-webfont.eot"></link>
	<link rel="stylesheet" href="~/fonts/fontawesome-webfont.svg"></link>
	<link rel="stylesheet" href="~/fonts/fontawesome-webfont.ttf"></link>
	<link rel="stylesheet" href="~/fonts/fontawesome-webfont.woff"></link>
	<link rel="stylesheet" href="~/fonts/fontawesome-webfont.woff2"></link>
	<link rel="stylesheet" href="~/fonts/FontAwesome.otf"></link>
    <title>Edit</title>
</head>
<body>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="id" />
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MainActor" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input asp-for="MainActor" class="form-control" />
                <span asp-validation-for="MainActor" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="imageUrl" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input asp-for="imageUrl" class="form-control" />
                <span asp-validation-for="imageUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
